#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)
require 'mealtime'

if ARGV.length == 0
  # GET ALL THE PLACES!
  MealTime.get_naked_lunch
else
  puts "Processing the select restaurants..."
  # For now, we'll handle --naked for Naked Lunch, plan accordingly for the future
  case ARGV.first
  when "--naked"
    MealTime.get_naked_lunch
  end
end